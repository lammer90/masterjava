<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="payloadForm" type="ru.javaops.masterjava.web.PayloadForm"/>
    </form-beans>

    <action-mappings>
        <action path="/payload" type="ru.javaops.masterjava.web.PayloadAction" name="payloadForm"
                validate="true" input="/index.html">
            <forward name="success" path="/WEB-INF/jsp/upload.jsp"/>
            <forward name="failure" path="/index.html"/>
        </action>
    </action-mappings>

    <!--<message-resources parameter="students.ApplicationResources"/>-->

</struts-config>